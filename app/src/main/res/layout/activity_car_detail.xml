<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/carDetailImageView"
        android:layout_width="407dp"
        android:layout_height="183dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="546dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carDetailNameTextView"
        android:layout_width="371dp"
        android:layout_height="23dp"
        android:layout_marginTop="184dp"
        android:layout_marginBottom="520dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carDetailDescriptionTextView"
        android:layout_width="348dp"
        android:layout_height="22dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="43dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="209dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="388dp"
        android:layout_height="341dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="378dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cardesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Seu texto aqui..." /> <!-- Adicione o preenchimento desejado -->


    </ScrollView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="416dp"
        android:layout_height="28dp"
        android:layout_marginTop="283dp"
        android:layout_marginBottom="420dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/colors"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="388dp"
        android:layout_height="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="251dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="453dp"
        android:text="Preco Aparti de R$99,988               Cores Disponiveis "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="314dp"
        android:layout_marginEnd="343dp"
        android:layout_marginBottom="361dp"
        android:clickable="true"
        android:foreground="@drawable/iconzap"
        android:foregroundTintMode="add"

        android:soundEffectsEnabled="false"
        android:src="@drawable/iconzap"
        android:tintMode="add"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#978A8A"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>
